{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./"
  },
  "exclude": [
    "node_modules",
    "demo"
  ],
  "extends": "@tsconfig/recommended/tsconfig.json"
}